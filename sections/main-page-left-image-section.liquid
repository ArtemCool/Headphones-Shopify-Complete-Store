<div class="container mx-auto py-8">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-16 items-center">
    <img src="{{ section.settings.image | image_url }}" width="" height="" loading="lazy">
    <div class="grid gap-2 md:gap-4">
      <h1 class="text-2xl md:text-5xl font-bold">{{ section.settings.first-heading }}</h1>
      <h2 class="text-xl md:text-4xl font-bold">{{ section.settings.second-heading }}</h2>
      <p class="text-sm md:text-base">{{ section.settings.description }}</p>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Left Image Section",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }, {
        "type": "text",
        "default": "SOUND QUALITY",
        "id": "first-heading",
        "label": "First Heading"
      }, {
        "type": "text",
        "default": "Immerse yourself in musician-worthy audio",
        "id": "second-heading",
        "label": "Second Heading"
      }, {
        "type": "text",
        "default": "A detailed, dynamic sound gives you an immersive listening environment for crystal-clear calls and rich, well-balanced music.<br><br>Designed by musicians for musicians, our award-winning acoustic tuning and high-definition aptX codecs promise audio quality that punches well above its weight.",
        "id": "description",
        "label": "description"
      }
    ]
  }
{% endschema %}