<div class="container mx-auto py-8">
  <div class="grid md:flex gap-4 md:gap-16">
    <div class="md:w-1/4">
      <h1 class="text-xl md:text-3xl font-bold">{{ section.settings.heading }}</h1>
    </div>
    <div class="md:w-3/4 grid gap-4 md:gap-6">
      {% for block in section.blocks %}
        <div class="grid gap-4">
          <div class="flex items-center gap-4">
            {% render 'icon-line-sale' %}
            <h2 class="text-base font-bold md:text-xl">{{ block.settings.garantee-heading }}</h2>
          </div>
          <p class="text-sm md:text-base">{{ block.settings.garantee-description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Main Page Garantees",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Peace-of-mind Guarantees."
      }
    ],
    "blocks": [
      {
        "name": "Garantee Item",
        "type": "garantee-item",
        "settings": [
          {
            "type": "text",
            "id": "garantee-heading",
            "label": "Garantee Item Heading",
            "default": "30 Day Returns"
          }, {
            "type": "text",
            "id": "garantee-description",
            "label": "Garantee Item Description",
            "default": "Doesn`t meet your expectations? Return it within 30 days for a full refund - no questions asked."
          }
        ]
      }
    ]
  }
{% endschema %}